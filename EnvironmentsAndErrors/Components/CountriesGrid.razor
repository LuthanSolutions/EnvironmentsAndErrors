@using Models

<CustomErrorBoundary @ref=errorBoundary NonDevelopmentErrorMessage="Error retrieving Countries.">
    <ChildContent>
        <SfGrid DataSource="@this.Countries">
            <GridColumns>
                <GridColumn Field="@nameof(Country.Id)" />
                <GridColumn Field="@nameof(Country.Name)" />
                <GridTemplates>
                    <DetailTemplate Context="countryContext">
                        @{
                            var country = (countryContext as Country);
                            <RegionsGrid Country="country" />
                        }

                    </DetailTemplate>
                </GridTemplates>
            </GridColumns>
        </SfGrid>
    </ChildContent>
</CustomErrorBoundary>
