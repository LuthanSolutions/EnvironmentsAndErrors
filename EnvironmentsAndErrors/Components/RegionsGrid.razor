@using Models

<CustomErrorBoundary @ref="@errorBoundary" NonDevelopmentErrorMessage="Error retrieving Regions.">
    <ChildContent>
        <SfGrid DataSource="@this.ViewModel?.RegionsService?.GetRegionsByCountry(this.Country!)">
            <GridColumns>
                <GridColumn Field="@nameof(Country.Id)" />
                <GridColumn Field="@nameof(Country.Name)" />
                <GridTemplates>
                    <DetailTemplate Context="regionContext">
                        @{
                            var region = (regionContext as Region);
                            <CitiesGrid Region="region" />
                        }
                    </DetailTemplate>
                </GridTemplates>
            </GridColumns>
        </SfGrid>
    </ChildContent>
</CustomErrorBoundary>